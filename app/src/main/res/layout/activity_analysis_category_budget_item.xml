<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#999999" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_budget_layout_month_budget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/category_budget_layout_month_extra_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="10000원 남음"
            android:textColor="#E91E63"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ProgressBar
            android:id="@+id/category_budget_layout_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:progress="50"
            android:progressDrawable="@drawable/analysis_layout_progressbar_style" />

        <TextView
            android:id="@+id/category_budget_layout_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:layout_marginLeft="10dp"
            android:textColor="#E91E63"
            android:textSize="13dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/budget_layout_budget_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="지출 : " />
</LinearLayout>

